<h3>Lista de Preguntas</h3>
<div class="table-responsive-sm">
<table class="table table-dark table-striped">
<% for (var i in quizes) { %>
<% var quiz = quizes[i]; %>
<tr>
<td>
<a href = "quizes/<%= quiz.id %>"><%= quiz.pregunta %></a>
</td>
<td>
<a href = "quizes/<%= quiz.id %>"><buton button class="btn btn-light">Ver</buton></a>
</td>
<td>
<a href = "quizes/<%= quiz.id %>/edit"><buton button class="btn btn-warning">Editar</buton></a>
</td>
<td>
<a href="/quizzes/<%= quiz.id %>?_method=delete" onClick="return confirm('Borrar: <%= quiz.pregunta %>');"><button button class="btn btn-danger">borrar</button></a>
</td>
</tr>
<% } %>
</table>
</div>