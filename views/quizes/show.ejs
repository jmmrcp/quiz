<h3>Preguntas</h3>
<form method="GET" action="/quizes/<%= quiz.id %>/answer">
  <div class="form-group">
    Pregunta:<%= quiz.pregunta %>
      <input type="text" class="form-control" name="respuesta" placeholder="respuesta">
    <button type="submit" class="btn btn-primary">Enviar</button>
  </div>
</form>

<h3>Comentarios</h3>
<% for (var i in quiz.Comments) { %>
<% var comment = quiz.Comments[i]; %>
<p><%= comment.texto %></p>
<% } %>
<a href = "/quizes/<%= quiz.id %>/comments/new"><buton button class="btn btn-dark">Nuevo Comentario</buton></a>